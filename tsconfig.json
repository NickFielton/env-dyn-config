{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "sourceMap": true
    },
    "include": [
        "source/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "source/**/__snapshots__",
        "source/**/__mocks__"
    ]
}